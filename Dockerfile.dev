FROM python:3.11

WORKDIR /app

COPY requirements.txt .

RUN pip install -r requirements.txt

COPY . .

EXPOSE 8080

ENV ENVIRONMENT=development

ENTRYPOINT ["./scripts/entrypoint.sh"]

CMD ["python", "-m", "uvicorn", "app.main:versioned_app", "--host", "0.0.0.0", "--port", "8080", "--workers", "2"]
